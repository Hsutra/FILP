(*Дан целочисленный массив и натуральный индекс (число, меньшее
размера массива). Необходимо определить является ли элемент по
указанному индексу глобальным минимумом.*)

open System

// Ввод элементов
let rec readList n = 
    match n with
       | 0 -> []
       | _ -> 
          let Head = System.Convert.ToInt32(System.Console.ReadLine())
          let Tail = readList (n-1)
          Head::Tail

//Поиск минимального элемента
let MinList list = 
   let rec NewMinList list cur_min = 
      match list with 
      | [] -> cur_min
      | head::t ->
         let new_cur_min = if head < cur_min then head else cur_min
         NewMinList t new_cur_min 
   NewMinList list list.Head

let Method list index = 
   let minList = MinList list

   let rec Method1 list index flag = 
      match list with
      | [] -> flag
      | h::t ->
          if index <> 0 then
              let new_index = index - 1                
              Method1 t new_index flag
          else
              if h = minList then flag = true
              else flag = false
   Method1 list index true

