(*Дан целочисленный массив и натуральный индекс (число, меньшее
размера массива). Необходимо определить является ли элемент по
указанному индексу локальным максимумом.*)

open System

// Ввод элементов
let rec readList n = 
    match n with
       | 0 -> []
       | _ -> 
          let Head = System.Convert.ToInt32(System.Console.ReadLine())
          let Tail = readList (n-1)
          Head::Tail

//Поиск максимального элемента
let MaxList list = 
   let rec NewMaxList list cur_max = 
      match list with 
      | [] -> cur_max
      | head::t ->
         let new_cur_max = if head > cur_max then head else cur_max
         NewMaxList t new_cur_max
   NewMaxList list list.Head

let Method list index = 
   let maxList = MaxList list

   let rec Method1 list index flag = 
      match list with
      | [] -> flag
      | h::t ->
          if index <> 0 then
              let new_index = index - 1                
              Method1 t new_index flag
          else
              if h = maxList then flag = true
              else flag = false
   Method1 list index true

[<EntryPoint>]
let main argv =
    Console.WriteLine("Введите количество элементов:")
    let list = readList (System.Convert.ToInt32(System.Console.ReadLine()))
    Console.WriteLine("Введите индекс:")
    let index = (System.Convert.ToInt32(System.Console.ReadLine()))
    Console.WriteLine("Результат:")
    Console.WriteLine(Method list index)
